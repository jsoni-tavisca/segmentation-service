    $(document).ready(function () {
        //Record Tab Impression
        $.get("Home/RecordTabImpression", function (data) {
        });

        //Record Hyperlink Text Impression
        var assignment = "@ViewBag.Assignment";
        if (assignment.length > 0) {
            $.get("Home/RecordHyperlinkTextImpression", function (data) {
            });
        }

        //Record Visual Studio Button Action
        $("#vs_details_btn").click(function () {
            $.get("Home/RecordVisualStudioButtonAction", function (data) {
            });
        });

        //Record Hyperlink click Action
        $("#common_hyperlink").click(function () {
            $.get("Home/RecordHyperLinkClickAction", function (data) {
            });
        });
    });


</script>
